@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="weChatDemoApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Air Products - 4S</title>
    <link rel="stylesheet" type="text/css" href="~/Content/dist/css/app.min.css" />
    <script type="text/javascript" src="~/Content/dist/js/app.min.js"></script>
</head>
<body>
    <div id="head"><span id="headicon" class="glyphicon glyphicon-menu-hamburger pull-left"></span> </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <h3>Recognition Moments</h3>
                </div>

                <div class="btn-group form-group">
                    <label class="btn btn-success" uib-btn-radio="'Left'">Safety</label>
                    <label class="btn btn-success" uib-btn-radio="'Right'">Speed</label>

                </div>
                <div class="btn-group form-group">
                    <label class="btn btn-success"  uib-btn-radio="'Left'">Simplicity</label>
                    <label class="btn btn-success"  uib-btn-radio="'Right'">Self-Confidence</label>
                </div>

                <div class="form-group">
                    <div><label>您要表彰的同事姓名</label></div>
                    <div class="form-group">
                        <input type="text" />
                    </div>
                </div>

                <div class="form-group">
                    <div><label>获奖理由</label></div>
                    <div class="form-group">
                        <textarea id="howToImprove"
                                  name="howToImprove"
                                  class="form-control"
                                  maxlength="200"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-primary">提交</button>

                    </div>
                </div>
            </div>
        </div>  
    </div>
</body>
</html>
