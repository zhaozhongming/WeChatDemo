@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Air Products - 4S</title>
    <link rel="stylesheet" type="text/css" href="~/Content/dist/css/app.min.css" />
    
    <script type="text/javascript" src="~/Content/dist/js/app.min.js"></script>
    <script type="text/javascript">
        (function (angular) {
            angular.module('weChatDemoApp').value('itemId', '@ViewBag.id');
        })(window.angular);
    </script>
    
</head>
<body class="cbp-spmenu-push">
    <div id="head"><span id="headicon" class="glyphicon glyphicon-menu-hamburger pull-left"></span> </div>

    <div ng-app="weChatDemoApp" ng-controller="itemController" class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <h3>{{title}}</h3>
                </div>

                <div class="form-group">
                    <div><span class="pname">{{nominated}}</span> </div>
                    <div><span class="subtitle">was nominated by </span><span class="subtitle pname">{{nominate}}</span></div>
                    <div class="subtitle">{{date}} <span id="stag" class="glyphicon glyphicon-tag">{{stag}}</span></div>
                </div>

                <div class="form-group">
                    <span>{{description}}</span>
                </div>

                <div class="form-group">
                    <img src="{{picurl}}"/>
                </div>

                <div class="form-group">
                    <uib-rating id="rating"
                                ng-model="rate"
                                titles="['1','2','3', '4', '5']">
                    </uib-rating>
                </div>

                <div class="form-group">
                    <textarea id="howToImprove"
                              name="howToImprove"
                              class="form-control"
                              maxlength="200"></textarea>

                </div>
                <div class="form-group">
                    <button class="form-control btn btn-primary">祝贺您！</button>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
